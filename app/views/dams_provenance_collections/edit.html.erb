    <br>
    <%=text_field_tag 'dams_provenance_collection[nameTypeValue][]', @simple_name_value , class: "input-block-level"%>
  <% elsif !@simple_name_type.nil? && @simple_name_type.length == 0%>
  <div id="name"></div> OR Enter Name<%=text_field_tag 'dams_provenance_collection[nameTypeValue][]' , "", class: "input-block-level"%>    
  <% else %>
  <div id="name"><%= select_tag 'dams_provenance_collection[nameURI][]', options_for_select(@simple_names, :selected => @simple_name_id), :prompt=>"Select Name" %></div>  
  <% end %>

