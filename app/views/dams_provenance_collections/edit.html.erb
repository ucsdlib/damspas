  <%= label_tag 'dams_provenance_collection[citationNoteType][]', "Preferred Citation Type" %>
  <%= text_field_tag 'dams_provenance_collection[citationNoteType][]', @dams_provenance_collection.citationNoteType[0], class: "input-block-level" %>
  <%= label_tag 'dams_provenance_collection[citationDisplayLabel][]', "Preferred Citation Display Label" %>
  <%= text_field_tag 'dams_provenance_collection[citationNoteDisplayLabel][]', @dams_provenance_collection.citationNoteDisplayLabel[0], class: "input-block-level" %>
