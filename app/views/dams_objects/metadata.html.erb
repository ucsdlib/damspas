<%# This page is based on show.html.erb, so if that one gets updated we'll need to update this one too. -DT %>

<% @page_title =  "#{grabTitle}" %>



<div class="row-fluid">
  <div class="span12">
    <%= render :partial => 'prev_next' %>
  </div>
</div>

<div class="row-fluid">

  <div id="content" class="show-document span9">

    <div class="row-fluid">
      <section class="dams-viewer span12">
        <%= render :partial => 'shared/fields/title' %>


<%# BEGIN RESTRICTED NOTICE %>
        <% restrictedNotice = grabRestrictedText(@document['otherNote_json_tesim']) %>
        <% unless restrictedNotice.nil? %>
          <div class="restricted-notice">
            <div>
             <%= restrictedNotice %>
            </div>
          </div>
          <div class="simple-object"></div>
        <% end %>
<%# END RESTRICTED NOTICE %>
    <% if !can? :update, @document then %>
        <% accessNotice = grab_access_text(@document) %>
        <% unless accessNotice.nil? %>
        <div class="restricted-notice">
	      <div>
	        <%= accessNotice %>
	      </div>
        </div>
        <div class="simple-object"></div>
        <% end %>
    <% end %>    
      </section>
    </div>
    <div class="row-fluid">
      <section class="dams-metadata span12">
        <%= render :partial => 'shared/fields/show' %>
      </section>
    </div>

  </div>

  <div class="span3">
    <div class="row-fluid">
      <section class="dams-sidebar span12">
        <%if @document['component_count_isi'] != nil   %>
          <%= render :partial => 'component_tree' %>
        <% end %>
        <%= render :partial => 'related_resources' %>
      </section>
    </div>
  </div>

</div>

<div class="row-fluid">
  <section class="dams-comments span9">
    <%= render :partial => 'comments' %>
  </section>
</div>
