<%# header bar for doc items in index view -%>

<%# thumbnail %>
<%= render :partial => 'document_thumbnail', :locals => { :document => document, :opts => {:counter => (document_counter + 1 + @response.params[:start].to_i)} } %>

<div>

	<%# main title container for doc partial view -%>
	<h3>
		<%#= t('blacklight.search.documents.counter', :counter => (document_counter + 1 + @response.params[:start].to_i)) %>
		<%= link_to_document document, :label=>document_show_link_field, :counter => (document_counter + 1 + @response.params[:start].to_i), :sep => ': ' %>
	</h3>

	<%# main container for doc partial view -%>
    <% if is_collection?( document ) %>
      <%= render :partial => 'collection', :locals => { :document => document } %>
    <% else %>
	  <%= render_document_partial document, :index %>
    <% end %>

	<%# TODO... display this as a link, not a button... find test case %>
  <%# bookmark functions for items/docs -%>
  
  <% if !current_user.nil?%>
  	<% anon = User.anonymous(request.remote_ip) %>
  	<% if anon.to_s != 'local' %>
  		<%= render_index_doc_actions document, :wrapping_class => '' %>
  	<% end %>
  <% end %>

</div>
