
<div class="prev_next_links btn-group pull-left">
  <%= paginate @pagination, :left => 1, :right => 1, :window => 2, :theme => 'ucsd_goto' %>
</div>

<div class="sort_options btn-group pull-right">
  <% if @pagination.sort == 'index' -%>
    <span class="active az btn btn-mini"><%= t('blacklight.search.facets.sort.index') %></span><%= link_to_unless(@pagination.sort == 'count', t('blacklight.search.facets.sort.count'),
                                                                                                         @pagination.params_for_resort_url('count', params), :class => "sort_change numeric btn btn-mini") %>
  <% elsif @pagination.sort == 'count' -%>
    <%=  link_to(t('blacklight.search.facets.sort.index'), @pagination.params_for_resort_url('index', params),
                 :class => "sort_change az btn") %><span class="active numeric btn btn-mini"><%= t('blacklight.search.facets.sort.count') %></span>
  <% end -%>
</div>
