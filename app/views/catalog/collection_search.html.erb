<div class="row-fluid">
  <div id="sidebar" class="span3">
    <%= render :partial => 'facets' %>
  </div>
  <div id="content" class="span9">
    <% @page_title = 'Browse By Collection' %>
    <h3>Browse by Collection<%if !@current_unit.blank?%>: <%=@current_unit%><%end%></h3>
    
    <div class="alert alert-info alert-no-dismiss">
      View current collections below. Click an image or link for a full description.
    </div>
<%
	@current_unit =  @current_unit.gsub!("UCSD","") if @current_unit && @current_unit.instance_of?(String) && @current_unit.include?("UCSD")
%>
    <%= render :partial => 'searchbox', :locals => {:unit => @current_unit, :unit_code => @current_unit_code}%>
    <%= render 'sort_and_per_page' %>
    <%#= render :partial => 'constraints' %>
    <h3 class="hide-text"><%= t('blacklight.search.search_results') %></h3>
    <%= render :partial => 'document_list', locals: {:documents => @document_list, :metadata_colls => @metadata_colls}%>
    <%#= render 'results_pagination' %>
    <div class="dams-search-results-footer">
      <%= render :partial => 'paginate_compact' %>
    </div>

  </div>
</div>
