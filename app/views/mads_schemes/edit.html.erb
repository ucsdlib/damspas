<h1>Edit MADS Scheme</h1>
<%= form_for @mads_scheme do |f| %>
  <%= label_tag 'mads_scheme[name]', "Name" %><%= text_field_tag 'mads_scheme[name][]', @mads_scheme.name[0] %>
  <br>
  <%= label_tag 'mads_scheme[code]', "Code" %><%= text_field_tag 'mads_scheme[code][]', @mads_scheme.code[0] %>
  <br>
  <%=f.submit "Save", class: "btn btn-primary" %>
  <%= link_to "Cancel", view_mads_scheme_path(@mads_scheme), class: "btn btn-primary" %>
<%end%>
