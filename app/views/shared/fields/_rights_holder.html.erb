<%
	 if defined?(componentIndex) # Then we're working with a component
		 prefix = "component_#{componentIndex}_"
		 htmlOpen = "<tr><td>%s</td><td><ul>"
		 htmlClose = "</ul></td></tr>"
	 else # We're working with an object or collection
		 prefix = ''
		 htmlOpen = "<dt>%s</dt><dd><ul>"
		 htmlClose = "</ul></dd>"
	 end

	 fieldData = @document["#{prefix}rightsHolder_tesim"]

	 if fieldData != nil

		 htmlOpen %= 'Rights Holder'.pluralize(fieldData.count)
		 concat htmlOpen.html_safe

		 fieldData.sort_by(&:downcase).each do |datum|
			 rightsHolder = datum
%>
		<li><%= rightsHolder.upcase_first %></li>
	<%
		 end

		 concat htmlClose.html_safe

		 end
	%>
