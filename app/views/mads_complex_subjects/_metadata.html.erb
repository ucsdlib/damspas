<%
		htmlOpen = "<dt>%s</dt><dd>"
		htmlClose = "</dd>"

		fields = ['topic', 'personalName','genreForm','iconography','scientificName','technique','builtWorkPlace','geographic','temporal','culturalContext','stylePeriod','conferenceName','function','corporateName','occupation','familyName','name']
		fields.each { |field|
		    for i in 0..20
		    	htmlOpen = "<dt>%s</dt><dd>"
		    	if @document["complexSubject_0_#{i}_#{field}_tesim"] != nil
			    	htmlOpen %= field.capitalize
			    	concat htmlOpen.html_safe
%>
			    	<ul class="unstyled">
<%
				
				    prefix = "complexSubject_0_#{i}_#{field}"
					fieldData = @document["#{prefix}_tesim"]
					if fieldData != nil				 
%> 					<li><%=fieldData.first %></li>
<%			  
					#else
					#	break
					end
				#end
%>
				</ul>
<%
				concat htmlClose.html_safe
				end
			end
		}		

		htmlOpen = "<dt>%s</dt><dd>"
		htmlClose = "</dd>"

		if @document["scheme_name_tesim"] != nil 
		    htmlOpen %= 'Scheme Name'
		    concat htmlOpen.html_safe
%>		    
			<ul class="unstyled sidebar-button-list">
				<li><%= render_document_show_field_value(:document=>@document, :field=>"scheme_name_tesim").html_safe %></li>
			</ul>
<%
			concat htmlClose.html_safe			
		end
				
		htmlOpen = "<dt>%s</dt><dd>"
		if @document["scheme_tesim"] != nil 
		    htmlOpen %= 'Scheme'
		    concat htmlOpen.html_safe
%>		    
			<ul class="unstyled sidebar-button-list">
				<li><%= link_to "<i class='icon-globe'></i> #{@document['scheme_tesim'].first}".html_safe, @document['scheme_tesim'].first, :class => "btn btn-block  btn-link" %></li>
				
			</ul>
<%
			concat htmlClose.html_safe			
		end
		htmlOpen = "<dt>%s</dt><dd>"
		if @document["externalAuthority_tesim"] != nil 
		    htmlOpen %= 'externalAuthority'
		    concat htmlOpen.html_safe
%>		    
			<ul class="unstyled sidebar-button-list">
				<li><%= link_to "<i class='icon-globe'></i> #{@document['externalAuthority_tesim'].first}".html_safe, @document['externalAuthority_tesim'].first, :class => "btn btn-block  btn-link" %></li>
			</ul>
<%
			concat htmlClose.html_safe			
		end						 	
%>